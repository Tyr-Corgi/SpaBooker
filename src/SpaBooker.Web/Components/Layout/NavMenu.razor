<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">✨ SpaBooker</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                @* Admin Menu Items - Dashboard and Scheduler at top *@
                <AuthorizeView Roles="Admin" Context="adminAuth">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/dashboard">
                            <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/scheduler">
                            <span class="bi bi-calendar-week" aria-hidden="true"></span> Scheduler
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="inventory">
                            <span class="bi bi-box-seam" aria-hidden="true"></span> Inventory
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/clients">
                            <span class="bi bi-person-lines-fill" aria-hidden="true"></span> Client Management
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/users">
                            <span class="bi bi-people" aria-hidden="true"></span> User Management
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/services">
                            <span class="bi bi-spa" aria-hidden="true"></span> Service Management
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/rooms">
                            <span class="bi bi-door-open" aria-hidden="true"></span> Room Management
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/banners">
                            <span class="bi bi-images" aria-hidden="true"></span> Banner Management
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/gift-certificates">
                            <span class="bi bi-gift" aria-hidden="true"></span> Gift Certificate Management
                        </NavLink>
                    </div>
                </AuthorizeView>

                @* Therapist Menu Items *@
                <AuthorizeView Roles="Therapist" Context="therapistAuth">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="schedule/enhanced">
                            <span class="bi bi-calendar-week" aria-hidden="true"></span> Scheduler
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="inventory">
                            <span class="bi bi-box-seam" aria-hidden="true"></span> Inventory
                        </NavLink>
                    </div>
                </AuthorizeView>

                @* Client Menu Items *@
                <AuthorizeView Roles="Client" Context="clientAuth">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="bookings/my-bookings">
                            <span class="bi bi-calendar3" aria-hidden="true"></span> My Bookings
                        </NavLink>
                    </div>
                </AuthorizeView>
            </Authorized>
        </AuthorizeView>

        @* Public Menu Items - Services only visible to non-admins *@
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="services">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Services
                    </NavLink>
                </div>
            </NotAuthorized>
            <Authorized>
                @* Services visible to Clients and Therapists, but NOT Admins *@
                <AuthorizeView Roles="Client,Therapist" Context="servicesAuth">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="services">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Services
                        </NavLink>
                    </div>
                </AuthorizeView>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="memberships/plans">
                <span class="bi bi-star" aria-hidden="true"></span> Memberships
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="gift-certificates/purchase">
                <span class="bi bi-gift" aria-hidden="true"></span> Gift Certificates
            </NavLink>
        </div>
    </nav>
</div>

