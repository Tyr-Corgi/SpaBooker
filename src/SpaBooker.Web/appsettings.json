{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=spabooker;Username=postgres;Password=password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Stripe": {
    "PublishableKey": "your_stripe_publishable_key",
    "SecretKey": "your_stripe_secret_key",
    "WebhookSecret": "your_webhook_secret"
  },
  "BookingSettings": {
    "DepositPercentage": 50.0,
    "CancellationWindowHours": 24,
    "RefundDeposit": true,
    "LateCancellationFeePercentage": 100.0
  },
  "MembershipSettings": {
    "CreditExpirationMonths": 12,
    "AllowUnlimitedRollover": true
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your_email@gmail.com",
    "SmtpPassword": "your_app_password",
    "EnableSsl": true,
    "FromEmail": "noreply@spabooker.com",
    "FromName": "SpaBooker",
    "EnableNotifications": false
  }
}
