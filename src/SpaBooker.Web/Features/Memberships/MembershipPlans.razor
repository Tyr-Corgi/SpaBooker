@page "/memberships/plans"
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Membership Plans - SpaBooker</PageTitle>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-rose-gold mb-2">Membership Plans</h1>
            <p class="lead text-muted">Choose the perfect plan for your wellness journey</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading plans...</p>
        </div>
    }
    else
    {
        <div class="row g-4 justify-content-center">
            @foreach (var plan in plans)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 membership-plan-card">
                        <div class="card-header text-center bg-rose-gold text-white">
                            <h3 class="mb-0">@plan.Name</h3>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-4">
                                <div class="display-4 text-rose-gold fw-bold">
                                    $@plan.MonthlyPrice.ToString("F0")
                                </div>
                                <div class="text-muted">per month</div>
                            </div>

                            <p class="text-center mb-4">@plan.Description</p>

                            <div class="benefits-list flex-grow-1">
                                <div class="benefit-item">
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                    <strong>@plan.MonthlyCredits.ToString("F0")</strong> spa credits per month
                                </div>
                                <div class="benefit-item">
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                    <strong>@plan.DiscountPercentage.ToString("F0")%</strong> discount on all services
                                </div>
                                <div class="benefit-item">
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                    Priority booking access
                                </div>
                                <div class="benefit-item">
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                    Exclusive member-only services
                                </div>
                                @if (plan.MonthlyPrice >= 100)
                                {
                                    <div class="benefit-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        Complimentary refreshments
                                    </div>
                                }
                                @if (plan.MonthlyPrice >= 140)
                                {
                                    <div class="benefit-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        Premium spa amenities
                                    </div>
                                    <div class="benefit-item">
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                        Birthday bonus credits
                                    </div>
                                }
                            </div>

                            <AuthorizeView>
                                <Authorized>
                                    <button class="btn btn-primary w-100 mt-4" @onclick="() => SelectPlan(plan.Id)">
                                        Choose Plan
                                    </button>
                                </Authorized>
                                <NotAuthorized>
                                    <a href="/auth/register" class="btn btn-outline-primary w-100 mt-4">
                                        Sign Up to Subscribe
                                    </a>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center py-4">
                        <h4 class="text-rose-gold mb-3">How Credits Work</h4>
                        <p class="mb-2">‚ú® Credits are loaded monthly and can be used toward any spa service.</p>
                        <p class="mb-2">üíé Unused credits roll over with no limit - use them anytime!</p>
                        <p class="mb-2">‚è∞ Credits expire after 12 months from the date they were issued.</p>
                        <p class="mb-0"><small class="text-muted">Cancel anytime. No long-term commitment required.</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<MembershipPlan> plans = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPlans();
    }

    private async Task LoadPlans()
    {
        isLoading = true;

        plans = await DbContext.MembershipPlans
            .Where(p => p.IsActive)
            .OrderBy(p => p.MonthlyPrice)
            .ToListAsync();

        isLoading = false;
    }

    private void SelectPlan(int planId)
    {
        NavigationManager.NavigateTo($"/memberships/subscribe/{planId}");
    }
}

