@page "/memberships/subscription/success"
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Subscription Successful - SpaBooker</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner"></div>
                    <p class="mt-3 text-muted">Confirming your subscription...</p>
                </div>
            }
            else if (plan != null)
            {
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center p-5">
                        <div class="success-icon mb-4">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <h1 class="text-rose-gold mb-3">Welcome to @plan.Name!</h1>
                        <p class="lead mb-4">Your membership subscription is now active.</p>

                        <div class="subscription-details">
                            <h5 class="text-rose-gold mb-3">Your Benefits</h5>
                            <div class="details-box p-4 bg-light rounded">
                                <div class="row mb-3">
                                    <div class="col-6 text-start"><strong>Monthly Credits:</strong></div>
                                    <div class="col-6 text-end text-success">@plan.MonthlyCredits.ToString("F0") credits</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 text-start"><strong>Service Discount:</strong></div>
                                    <div class="col-6 text-end text-success">@plan.DiscountPercentage.ToString("F0")%</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6 text-start"><strong>Monthly Cost:</strong></div>
                                    <div class="col-6 text-end">${plan.MonthlyPrice:F2}</div>
                                </div>
                                <div class="row">
                                    <div class="col-6 text-start"><strong>Status:</strong></div>
                                    <div class="col-6 text-end">
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info mt-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>What's Next:</strong> Your credits have been added to your account and are ready to use! 
                            Start booking your spa services now and enjoy your membership benefits.
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="/memberships/my-membership" class="btn btn-primary btn-lg">
                                View My Membership
                            </a>
                            <a href="/services" class="btn btn-outline-secondary">
                                Book a Service
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center p-5">
                        <div class="error-icon mb-4">
                            <i class="bi bi-exclamation-circle-fill"></i>
                        </div>
                        <h3 class="text-danger mb-3">Subscription Not Found</h3>
                        <p>We're still processing your subscription. Please check back in a few moments.</p>
                        <a href="/memberships/my-membership" class="btn btn-primary mt-3">View My Membership</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private MembershipPlan? plan;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        // Get plan ID from query string
        var uri = new Uri(NavigationManager.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        
        if (query.TryGetValue("plan_id", out var planIdStr) && int.TryParse(planIdStr, out var planId))
        {
            await LoadPlan(planId);
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadPlan(int planId)
    {
        plan = await DbContext.MembershipPlans
            .FirstOrDefaultAsync(p => p.Id == planId);

        isLoading = false;
    }
}

