@page "/bookings/payment/{BookingId:int}"
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.Options
@using SpaBooker.Core.Entities
@using SpaBooker.Core.Interfaces
@using SpaBooker.Core.Settings
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@inject IStripeService StripeService
@inject IOptions<BookingSettings> BookingSettings
@inject IConfiguration Configuration
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Payment - SpaBooker</PageTitle>

<div class="container py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading payment details...</p>
        </div>
    }
    else if (booking == null)
    {
        <div class="alert alert-danger">
            Booking not found. <a href="/services">Browse services</a>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-rose-gold text-white text-center">
                        <h3 class="mb-0">Payment Required</h3>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Deposit Required:</strong> We require a @depositPercentage% deposit to secure your booking.
                        </div>

                        <!-- Booking Details -->
                        <h5 class="text-rose-gold mb-3">Booking Details</h5>
                        <div class="booking-summary mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Service:</span>
                                <strong>@booking.Service.Name</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Therapist:</span>
                                <strong>@booking.Therapist.FirstName @booking.Therapist.LastName</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Date & Time:</span>
                                <strong>@booking.StartTime.ToString("MMM dd, yyyy h:mm tt")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Duration:</span>
                                <strong>@booking.Service.DurationMinutes minutes</strong>
                            </div>
                        </div>

                        <hr />

                        <!-- Pricing -->
                        <h5 class="text-rose-gold mb-3">Payment Summary</h5>
                        <div class="pricing-summary">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Service Price:</span>
                                <span>$@booking.ServicePrice.ToString("F2")</span>
                            </div>
                            @if (booking.DiscountApplied > 0)
                            {
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Discount:</span>
                                    <span>-$@booking.DiscountApplied.Value.ToString("F2")</span>
                                </div>
                            }
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total Service Cost:</strong>
                                <strong>$@booking.TotalPrice.ToString("F2")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2 text-primary">
                                <strong>Deposit Due Today (@depositPercentage%):</strong>
                                <strong class="fs-4">$@depositAmount.ToString("F2")</strong>
                            </div>
                            <div class="d-flex justify-content-between text-muted small">
                                <span>Remaining Balance (pay at spa):</span>
                                <span>$@(booking.TotalPrice - depositAmount).ToString("F2")</span>
                            </div>
                        </div>

                        <div class="alert alert-warning mt-3">
                            <small>
                                <strong>Cancellation Policy:</strong> Free cancellation up to @cancellationWindowHours hours before your appointment. 
                                Late cancellations will forfeit the deposit.
                            </small>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-3">
                                @errorMessage
                            </div>
                        }

                        @if (!paymentProcessed)
                        {
                            <div class="d-grid gap-2 mt-4">
                                <button class="btn btn-primary btn-lg" @onclick="ProcessPayment" disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Processing Payment...</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-credit-card me-2"></i>Pay $@depositAmount.ToString("F2")</span>
                                    }
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="CancelBooking" disabled="@isProcessing">
                                    Cancel Booking
                                </button>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-lock"></i> Secure payment powered by Stripe
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success text-center mt-4">
                                <i class="bi bi-check-circle fs-1"></i>
                                <h4 class="mt-2">Payment Successful!</h4>
                                <p>Your booking is confirmed. Redirecting...</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Stripe Test Card Info (Remove in production) -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="text-muted">ðŸ’³ Test Payment (Development Mode)</h6>
                        <p class="small mb-1"><strong>Test Card:</strong> 4242 4242 4242 4242</p>
                        <p class="small mb-1"><strong>Expiry:</strong> Any future date</p>
                        <p class="small mb-0"><strong>CVC:</strong> Any 3 digits</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int BookingId { get; set; }

    private Booking? booking;
    private decimal depositAmount;
    private decimal depositPercentage;
    private int cancellationWindowHours;
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool paymentProcessed = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        depositPercentage = BookingSettings.Value.DepositPercentage;
        cancellationWindowHours = BookingSettings.Value.CancellationWindowHours;

        await LoadBooking();
    }

    private async Task LoadBooking()
    {
        isLoading = true;

        booking = await DbContext.Bookings
            .Include(b => b.Service)
            .Include(b => b.Therapist)
            .Include(b => b.Client)
            .Include(b => b.Location)
            .FirstOrDefaultAsync(b => b.Id == BookingId);

        if (booking != null)
        {
            // Calculate deposit amount
            depositAmount = Math.Round(booking.TotalPrice * (depositPercentage / 100), 2);
            booking.DepositAmount = depositAmount;
        }

        isLoading = false;
    }

    private async Task ProcessPayment()
    {
        if (booking == null) return;

        isProcessing = true;
        errorMessage = null;

        try
        {
            // Create Stripe Checkout Session
            var baseUrl = NavigationManager.BaseUri.TrimEnd('/');
            var successUrl = $"{baseUrl}/payment/success?booking_id={booking.Id}";
            var cancelUrl = $"{baseUrl}/bookings/payment/{booking.Id}";

            var metadata = new Dictionary<string, string>
            {
                { "booking_id", booking.Id.ToString() },
                { "client_id", booking.ClientId },
                { "service_id", booking.ServiceId.ToString() }
            };

            var checkoutUrl = await StripeService.CreateCheckoutSessionAsync(
                booking.Client.Email!,
                depositAmount,
                "usd",
                $"Booking Deposit - {booking.Service.Name} on {booking.StartTime:MMM dd, yyyy}",
                successUrl,
                cancelUrl,
                metadata
            );

            // Redirect to Stripe Checkout
            NavigationManager.NavigateTo(checkoutUrl, true);
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to initiate payment. Please try again or contact support.";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task CancelBooking()
    {
        if (booking == null) return;

        booking.Status = BookingStatus.Cancelled;
        booking.CancellationReason = "Cancelled before payment";
        booking.CancelledAt = DateTime.UtcNow;
        booking.UpdatedAt = DateTime.UtcNow;

        await DbContext.SaveChangesAsync();

        NavigationManager.NavigateTo("/services");
    }
}

