@page "/admin/services/edit/{ServiceId:int}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Edit Service - SpaBooker</PageTitle>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/admin/services" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Back to Services
            </a>
            <h1 class="text-rose-gold mb-2">Edit Service</h1>
            <p class="text-muted">Update service information and pricing</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading service...</p>
        </div>
    }
    else if (service == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Service not found.
        </div>
    }
    else
    {
        <div>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }

            <div class="row">
                <!-- Service Information -->
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Service Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Service Name *</label>
                                <input type="text" class="form-control" @bind="editModel.Name" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description *</label>
                                <textarea class="form-control" rows="4" @bind="editModel.Description"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Image URL (Optional)</label>
                                <input type="text" class="form-control" @bind="editModel.ImageUrl" 
                                         placeholder="https://example.com/service-image.jpg" />
                                <small class="form-text text-muted">
                                    ðŸ’¡ Tip: Use Unsplash for free spa/massage images. Recommended size: 800x600px
                                </small>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Duration (minutes) *</label>
                                    <input type="number" class="form-control" @bind="editModel.DurationMinutes" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Base Price ($) *</label>
                                    <input type="number" step="0.01" class="form-control" @bind="editModel.BasePrice" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Location *</label>
                                <select class="form-select" @bind="editModel.LocationId">
                                    <option value="">-- Select Location --</option>
                                    @foreach (var location in locations)
                                    {
                                        <option value="@location.Id">@location.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" 
                                       id="requiresMembership" @bind="editModel.RequiresMembership">
                                <label class="form-check-label" for="requiresMembership">
                                    Requires Membership
                                </label>
                                <div class="form-text">Check if this service is only available to members</div>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       id="isActive" @bind="editModel.IsActive">
                                <label class="form-check-label" for="isActive">
                                    Active
                                </label>
                                <div class="form-text">Uncheck to hide this service from clients</div>
                            </div>
                        </div>
                    </div>

                    <!-- Therapist Assignments -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Assigned Therapists</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small mb-3">Select which therapists can perform this service</p>
                            
                            @if (availableTherapists.Any())
                            {
                                <div class="row">
                                    @foreach (var therapist in availableTherapists)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       id="therapist-@therapist.Id"
                                                       checked="@IsTherapistAssigned(therapist.Id)"
                                                       @onchange="@(e => ToggleTherapist(therapist.Id, (bool)e.Value!))">
                                                <label class="form-check-label" for="therapist-@therapist.Id">
                                                    @therapist.FirstName @therapist.LastName
                                                    @if (!string.IsNullOrEmpty(therapist.Specialties))
                                                    {
                                                        <br/>
                                                        <small class="text-muted">@therapist.Specialties</small>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    No therapists available. Clients can book with any therapist.
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Service Info Sidebar -->
                <div class="col-lg-4">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Service Status</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Current Status:</strong>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </p>

                            <p class="mb-2">
                                <strong>Created:</strong><br/>
                                <small>@service.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</small>
                            </p>

                            @if (service.UpdatedAt.HasValue)
                            {
                                <p class="mb-0">
                                    <strong>Last Updated:</strong><br/>
                                    <small>@service.UpdatedAt.Value.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")</small>
                                </p>
                            }
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Quick Tips</h5>
                        </div>
                        <div class="card-body">
                            <ul class="small mb-0">
                                <li>Set competitive prices based on market research</li>
                                <li>Write clear, enticing descriptions</li>
                                <li>Assign therapists with relevant specialties</li>
                                <li>Use "Members Only" for exclusive services</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" disabled="@isSaving" @onclick="SaveService">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-save me-2"></i>Save Changes
                        </button>
                        <a href="/admin/services" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int ServiceId { get; set; }

    private SpaService? service;
    private EditServiceModel editModel = new();
    private List<Location> locations = new();
    private List<ApplicationUser> availableTherapists = new();
    private List<string> assignedTherapistIds = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;

        service = await DbContext.SpaServices
            .Include(s => s.Location)
            .FirstOrDefaultAsync(s => s.Id == ServiceId);

        if (service != null)
        {
            editModel = new EditServiceModel
            {
                Name = service.Name,
                Description = service.Description,
                ImageUrl = service.ImageUrl,
                DurationMinutes = service.DurationMinutes,
                BasePrice = service.BasePrice,
                LocationId = service.LocationId.ToString(),
                RequiresMembership = service.RequiresMembership,
                IsActive = service.IsActive
            };

            // Load assigned therapists
            assignedTherapistIds = await DbContext.ServiceTherapists
                .Where(st => st.ServiceId == ServiceId)
                .Select(st => st.TherapistId)
                .ToListAsync();
        }

        locations = await DbContext.Locations
            .Where(l => l.IsActive)
            .OrderBy(l => l.Name)
            .ToListAsync();

        // Load all therapists
        var therapistRole = await DbContext.Roles.FirstOrDefaultAsync(r => r.Name == "Therapist");
        if (therapistRole != null)
        {
            var therapistUserIds = await DbContext.UserRoles
                .Where(ur => ur.RoleId == therapistRole.Id)
                .Select(ur => ur.UserId)
                .ToListAsync();

            availableTherapists = await DbContext.Users
                .Where(u => therapistUserIds.Contains(u.Id))
                .OrderBy(u => u.FirstName)
                .ToListAsync();
        }

        isLoading = false;
    }

    private bool IsTherapistAssigned(string therapistId)
    {
        return assignedTherapistIds.Contains(therapistId);
    }

    private void ToggleTherapist(string therapistId, bool isChecked)
    {
        if (isChecked && !assignedTherapistIds.Contains(therapistId))
        {
            assignedTherapistIds.Add(therapistId);
        }
        else if (!isChecked && assignedTherapistIds.Contains(therapistId))
        {
            assignedTherapistIds.Remove(therapistId);
        }
    }

    private async Task SaveService()
    {
        if (service == null) return;

        isSaving = true;
        errorMessage = null;

        try
        {
            // Update service info
            service.Name = editModel.Name;
            service.Description = editModel.Description;
            service.ImageUrl = editModel.ImageUrl;
            service.DurationMinutes = editModel.DurationMinutes;
            service.BasePrice = editModel.BasePrice;
            service.LocationId = int.Parse(editModel.LocationId);
            service.RequiresMembership = editModel.RequiresMembership;
            service.IsActive = editModel.IsActive;
            service.UpdatedAt = DateTime.UtcNow;

            // Update therapist assignments
            var existingAssignments = await DbContext.ServiceTherapists
                .Where(st => st.ServiceId == ServiceId)
                .ToListAsync();

            // Remove unassigned therapists
            var toRemove = existingAssignments.Where(st => !assignedTherapistIds.Contains(st.TherapistId)).ToList();
            DbContext.ServiceTherapists.RemoveRange(toRemove);

            // Add new assignments
            var existingIds = existingAssignments.Select(st => st.TherapistId).ToList();
            var toAdd = assignedTherapistIds.Where(id => !existingIds.Contains(id)).Select(id => new ServiceTherapist
            {
                ServiceId = ServiceId,
                TherapistId = id,
                AssignedAt = DateTime.UtcNow
            });
            DbContext.ServiceTherapists.AddRange(toAdd);

            await DbContext.SaveChangesAsync();

            NavigationManager.NavigateTo($"/admin/services?success=Service '{service.Name}' updated successfully", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while saving the service. Please try again.";
        }
        finally
        {
            isSaving = false;
        }
    }

    public class EditServiceModel
    {
        [Required]
        public string Name { get; set; } = string.Empty;

        [Required]
        public string Description { get; set; } = string.Empty;

        public string? ImageUrl { get; set; }

        [Required]
        [Range(1, 480, ErrorMessage = "Duration must be between 1 and 480 minutes")]
        public int DurationMinutes { get; set; }

        [Required]
        [Range(0.01, 10000, ErrorMessage = "Price must be between $0.01 and $10,000")]
        public decimal BasePrice { get; set; }

        [Required]
        public string LocationId { get; set; } = string.Empty;

        public bool RequiresMembership { get; set; }
        public bool IsActive { get; set; } = true;
    }
}

