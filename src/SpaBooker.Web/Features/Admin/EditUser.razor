@page "/admin/users/edit/{UserId}"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Edit User - SpaBooker</PageTitle>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/admin/users" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Back to Users
            </a>
            <h1 class="text-rose-gold mb-2">Edit User</h1>
            <p class="text-muted">Update user information and roles</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-rose-gold" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading user...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage) && user == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @errorMessage
        </div>
    }
    else if (user == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            User not found.
        </div>
    }
    else
    {
        <EditForm Model="@editModel" OnValidSubmit="SaveUser">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }

            <div class="row">
                <!-- Personal Information -->
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Personal Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name *</label>
                                    <InputText class="form-control" @bind-Value="editModel.FirstName" />
                                    <ValidationMessage For="@(() => editModel.FirstName)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name *</label>
                                    <InputText class="form-control" @bind-Value="editModel.LastName" />
                                    <ValidationMessage For="@(() => editModel.LastName)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email *</label>
                                <InputText type="email" class="form-control" @bind-Value="editModel.Email" />
                                <ValidationMessage For="@(() => editModel.Email)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <InputText class="form-control" @bind-Value="editModel.PhoneNumber" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Location</label>
                                <InputSelect class="form-select" @bind-Value="editModel.LocationId">
                                    <option value="">-- No Location --</option>
                                    @foreach (var location in locations)
                                    {
                                        <option value="@location.Id">@location.Name</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>
                    </div>

                    <!-- Therapist Information (if therapist role) -->
                    @if (editModel.IsTherapist)
                    {
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-rose-gold text-white">
                                <h5 class="mb-0">Therapist Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Bio</label>
                                    <InputTextArea class="form-control" rows="3" @bind-Value="editModel.Bio" 
                                                  placeholder="Tell clients about yourself..." />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Specialties</label>
                                    <InputText class="form-control" @bind-Value="editModel.Specialties" 
                                              placeholder="e.g., Deep Tissue, Swedish, Hot Stone" />
                                    <small class="text-muted">Separate multiple specialties with commas</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Approved Services (if therapist role) -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-rose-gold text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-scissors me-2"></i>Approved Services
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">
                                    <small>Select which services this therapist is qualified to perform.</small>
                                </p>
                                
                                @if (!availableServices.Any())
                                {
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle me-2"></i>
                                        No services available. Please add services in Service Management first.
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        @foreach (var service in availableServices)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" 
                                                           type="checkbox" 
                                                           id="service-@service.Id"
                                                           checked="@editModel.ApprovedServiceIds.Contains(service.Id)"
                                                           @onchange="@((e) => OnServiceCheckChanged(service.Id, (bool)(e.Value ?? false)))">
                                                    <label class="form-check-label" for="service-@service.Id">
                                                        <strong>@service.Name</strong>
                                                        <br/>
                                                        <small class="text-muted">
                                                            @service.DurationMinutes min | $@service.BasePrice
                                                        </small>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    
                                    @if (editModel.ApprovedServiceIds.Any())
                                    {
                                        <div class="alert alert-success mt-3 mb-0">
                                            <i class="bi bi-check-circle me-2"></i>
                                            <strong>@editModel.ApprovedServiceIds.Count</strong> service(s) selected
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Roles and Status -->
                <div class="col-lg-4">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Roles</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" 
                                       id="roleClient" @bind="editModel.IsClient">
                                <label class="form-check-label" for="roleClient">
                                    <span class="badge bg-success">Client</span>
                                </label>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" 
                                       id="roleTherapist" @bind="editModel.IsTherapist">
                                <label class="form-check-label" for="roleTherapist">
                                    <span class="badge bg-primary">Therapist</span>
                                </label>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" 
                                       id="roleAdmin" @bind="editModel.IsAdmin">
                                <label class="form-check-label" for="roleAdmin">
                                    <span class="badge bg-danger">Admin</span>
                                </label>
                            </div>

                            <div class="alert alert-info mt-3">
                                <small>
                                    <i class="bi bi-info-circle me-1"></i>
                                    Users must have at least one role.
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Account Status</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Email Confirmed:</strong> 
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">No</span>
                                }
                            </p>

                            <p class="mb-3">
                                <strong>Account Status:</strong>
                                @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow)
                                {
                                    <span class="badge bg-danger">Locked</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </p>

                            <hr />

                            <!-- Lock/Unlock Account Section -->
                            <div class="mt-3 mb-3">
                                <h6 class="text-muted mb-2">Account Access Control</h6>
                                @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow)
                                {
                                    <div class="alert alert-danger mb-3">
                                        <i class="bi bi-lock-fill me-2"></i>
                                        <strong>Account is Locked</strong><br/>
                                        <small>This user cannot log in until the account is unlocked.</small>
                                    </div>
                                    <button type="button" class="btn btn-success w-100" @onclick="UnlockUser">
                                        <i class="bi bi-unlock-fill me-2"></i>Unlock Account
                                    </button>
                                }
                                else
                                {
                                    <div class="alert alert-warning mb-3">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <strong>Warning:</strong> Locking this account will immediately prevent the user from logging in. 
                                        Use this to temporarily disable access without deleting the account.
                                    </div>
                                    <button type="button" class="btn btn-warning w-100" @onclick="ShowLockConfirmation">
                                        <i class="bi bi-lock-fill me-2"></i>Lock Account
                                    </button>
                                }
                            </div>

                            <hr />

                            <p class="mb-2">
                                <strong>Created:</strong><br/>
                                <small>@user.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</small>
                            </p>

                            @if (user.LastLoginAt.HasValue)
                            {
                                <p class="mb-0">
                                    <strong>Last Login:</strong><br/>
                                    <small>@user.LastLoginAt.Value.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")</small>
                                </p>
                            }
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-rose-gold text-white">
                            <h5 class="mb-0">Password Reset</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">New Password</label>
                                <InputText type="password" class="form-control" @bind-Value="editModel.NewPassword" 
                                          placeholder="Leave blank to keep current" />
                                <small class="text-muted">Min 6 characters</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="bi bi-save me-2"></i>Save Changes
                        </button>
                        <a href="/admin/users" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

<!-- Lock Confirmation Modal -->
@if (showLockConfirmation)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Account Lock
                    </h5>
                    <button type="button" class="btn-close" @onclick="() => showLockConfirmation = false"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">
                        <strong>Are you sure you want to lock this user account?</strong>
                    </p>
                    <p class="mb-2">This action will:</p>
                    <ul class="mb-3">
                        <li>Immediately prevent the user from logging in</li>
                        <li>Keep all user data intact</li>
                        <li>Can be reversed by clicking "Unlock Account"</li>
                    </ul>
                    <div class="alert alert-info mb-0">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>User:</strong> @user?.FirstName @user?.LastName (@user?.Email)
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showLockConfirmation = false">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-warning" @onclick="LockUser">
                        <i class="bi bi-lock-fill me-2"></i>Lock Account
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    private ApplicationUser? user;
    private EditUserModel editModel = new();
    private List<Location> locations = new();
    private List<SpaService> availableServices = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private bool showLockConfirmation = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            
            user = await context.Users
                .Include(u => u.Location)
                .Include(u => u.ServiceTherapists)
                .FirstOrDefaultAsync(u => u.Id == UserId);

            if (user != null)
            {
                // Load current roles using UserManager (it has its own context)
                var roles = await UserManager.GetRolesAsync(user);

                editModel = new EditUserModel
                {
                    FirstName = user.FirstName,
                    LastName = user.LastName,
                    Email = user.Email ?? "",
                    PhoneNumber = user.PhoneNumber ?? "",
                    LocationId = user.LocationId?.ToString() ?? "",
                    Bio = user.Bio ?? "",
                    Specialties = user.Specialties ?? "",
                    IsClient = roles.Contains("Client"),
                    IsTherapist = roles.Contains("Therapist"),
                    IsAdmin = roles.Contains("Admin"),
                    ApprovedServiceIds = user.ServiceTherapists.Select(st => st.ServiceId).ToList()
                };
            }

            locations = await context.Locations
                .Where(l => l.IsActive)
                .OrderBy(l => l.Name)
                .ToListAsync();
                
            // Load all active services
            availableServices = await context.SpaServices
                .Where(s => s.IsActive)
                .OrderBy(s => s.Name)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveUser()
    {
        if (user == null) return;

        // Validate at least one role selected
        if (!editModel.IsClient && !editModel.IsTherapist && !editModel.IsAdmin)
        {
            errorMessage = "User must have at least one role assigned.";
            return;
        }

        isSaving = true;
        errorMessage = null;

        try
        {
            // Reload the user to ensure it's tracked by UserManager's context
            var userToUpdate = await UserManager.FindByIdAsync(UserId);
            if (userToUpdate == null)
            {
                errorMessage = "User not found.";
                return;
            }

            // Update basic info
            userToUpdate.FirstName = editModel.FirstName;
            userToUpdate.LastName = editModel.LastName;
            userToUpdate.Email = editModel.Email;
            userToUpdate.UserName = editModel.Email;
            userToUpdate.NormalizedEmail = editModel.Email.ToUpper();
            userToUpdate.NormalizedUserName = editModel.Email.ToUpper();
            userToUpdate.PhoneNumber = editModel.PhoneNumber;
            userToUpdate.LocationId = string.IsNullOrEmpty(editModel.LocationId) ? null : int.Parse(editModel.LocationId);
            userToUpdate.Bio = editModel.Bio;
            userToUpdate.Specialties = editModel.Specialties;

            await UserManager.UpdateAsync(userToUpdate);

            // Update password if provided
            if (!string.IsNullOrEmpty(editModel.NewPassword))
            {
                var token = await UserManager.GeneratePasswordResetTokenAsync(userToUpdate);
                await UserManager.ResetPasswordAsync(userToUpdate, token, editModel.NewPassword);
            }

            // Update roles
            var currentRoles = await UserManager.GetRolesAsync(userToUpdate);

            // Add new roles
            if (editModel.IsClient && !currentRoles.Contains("Client"))
                await UserManager.AddToRoleAsync(userToUpdate, "Client");
            if (editModel.IsTherapist && !currentRoles.Contains("Therapist"))
                await UserManager.AddToRoleAsync(userToUpdate, "Therapist");
            if (editModel.IsAdmin && !currentRoles.Contains("Admin"))
                await UserManager.AddToRoleAsync(userToUpdate, "Admin");

            // Remove unchecked roles
            if (!editModel.IsClient && currentRoles.Contains("Client"))
                await UserManager.RemoveFromRoleAsync(userToUpdate, "Client");
            if (!editModel.IsTherapist && currentRoles.Contains("Therapist"))
                await UserManager.RemoveFromRoleAsync(userToUpdate, "Therapist");
            if (!editModel.IsAdmin && currentRoles.Contains("Admin"))
                await UserManager.RemoveFromRoleAsync(userToUpdate, "Admin");

            // Update service assignments (if therapist)
            if (editModel.IsTherapist)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                
                // Get current service assignments
                var currentAssignments = await context.ServiceTherapists
                    .Where(st => st.TherapistId == UserId)
                    .ToListAsync();
                
                // Remove assignments that are no longer selected
                var assignmentsToRemove = currentAssignments
                    .Where(st => !editModel.ApprovedServiceIds.Contains(st.ServiceId))
                    .ToList();
                context.ServiceTherapists.RemoveRange(assignmentsToRemove);
                
                // Add new assignments
                var currentServiceIds = currentAssignments.Select(st => st.ServiceId).ToList();
                var newServiceIds = editModel.ApprovedServiceIds
                    .Where(sid => !currentServiceIds.Contains(sid))
                    .ToList();
                    
                foreach (var serviceId in newServiceIds)
                {
                    context.ServiceTherapists.Add(new ServiceTherapist
                    {
                        ServiceId = serviceId,
                        TherapistId = UserId,
                        AssignedAt = DateTime.UtcNow
                    });
                }
                
                await context.SaveChangesAsync();
            }

            NavigationManager.NavigateTo($"/admin/users?success=User {userToUpdate.FirstName} {userToUpdate.LastName} updated successfully");
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while saving the user: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void OnServiceCheckChanged(int serviceId, bool isChecked)
    {
        if (isChecked)
        {
            if (!editModel.ApprovedServiceIds.Contains(serviceId))
            {
                editModel.ApprovedServiceIds.Add(serviceId);
            }
        }
        else
        {
            editModel.ApprovedServiceIds.Remove(serviceId);
        }
    }

    private void ShowLockConfirmation()
    {
        showLockConfirmation = true;
    }

    private async Task LockUser()
    {
        if (user == null) return;

        try
        {
            // Lock the user account indefinitely (until manually unlocked)
            // Use UserManager's built-in method which handles UTC correctly
            await UserManager.SetLockoutEndDateAsync(user, DateTimeOffset.UtcNow.AddYears(100));
            
            showLockConfirmation = false;
            await LoadData(); // Refresh the UI
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to lock the user account: {ex.Message}";
            showLockConfirmation = false;
        }
    }

    private async Task UnlockUser()
    {
        if (user == null) return;

        try
        {
            // Unlock the user account by setting lockout end to null
            // Use UserManager's built-in method which handles UTC correctly
            await UserManager.SetLockoutEndDateAsync(user, null);
            
            await LoadData(); // Refresh the UI
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to unlock the user account: {ex.Message}";
        }
    }

    public class EditUserModel
    {
        [Required]
        public string FirstName { get; set; } = string.Empty;

        [Required]
        public string LastName { get; set; } = string.Empty;

        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        public string PhoneNumber { get; set; } = string.Empty;
        public string LocationId { get; set; } = string.Empty;
        public string Bio { get; set; } = string.Empty;
        public string Specialties { get; set; } = string.Empty;

        public bool IsClient { get; set; }
        public bool IsTherapist { get; set; }
        public bool IsAdmin { get; set; }

        public string? NewPassword { get; set; }
        
        public List<int> ApprovedServiceIds { get; set; } = new();
    }
}

