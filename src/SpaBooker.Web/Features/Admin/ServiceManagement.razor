@page "/admin/services"
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Service Management - SpaBooker</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="text-rose-gold mb-2">Service Management</h1>
                <p class="text-muted">Manage spa services and pricing</p>
            </div>
            <a href="/admin/services/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add New Service
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    <!-- Filter by Location -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link @(selectedLocationId == null ? "active" : "")" 
                       @onclick="() => FilterByLocation(null)" 
                       style="cursor: pointer;">
                        All Locations (@allServices.Count)
                    </a>
                </li>
                @foreach (var location in locations)
                {
                    <li class="nav-item">
                        <a class="nav-link @(selectedLocationId == location.Id ? "active" : "")" 
                           @onclick="() => FilterByLocation(location.Id)" 
                           style="cursor: pointer;">
                            @location.Name (@GetLocationServiceCount(location.Id))
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading services...</p>
        </div>
    }
    else
    {
        <!-- Search Box -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" 
                           placeholder="Search services..." 
                           @bind="searchQuery" 
                           @bind:event="oninput"
                           @onkeyup="SearchServices" />
                </div>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group" role="group">
                    <button type="button" class="btn @(showInactive ? "btn-outline-secondary" : "btn-secondary")" 
                            @onclick="() => ToggleInactive(false)">
                        Active Only
                    </button>
                    <button type="button" class="btn @(showInactive ? "btn-secondary" : "btn-outline-secondary")" 
                            @onclick="() => ToggleInactive(true)">
                        Show All
                    </button>
                </div>
            </div>
        </div>

        <!-- Services Grid -->
        <div class="row">
            @if (filteredServices.Any())
            {
                @foreach (var service in filteredServices)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card service-card h-100 @(!service.IsActive ? "inactive" : "")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-rose-gold mb-0">@service.Name</h5>
                                    @if (!service.IsActive)
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </div>

                                <p class="card-text text-muted small">@service.Description</p>

                                <div class="service-details">
                                    <div class="detail-item">
                                        <i class="bi bi-geo-alt text-rose-gold"></i>
                                        <span>@service.Location.Name</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-clock text-rose-gold"></i>
                                        <span>@service.DurationMinutes min</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-currency-dollar text-rose-gold"></i>
                                        <span class="price">$@service.BasePrice.ToString("F2")</span>
                                    </div>
                                    @if (service.RequiresMembership)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-star text-rose-gold"></i>
                                            <span>Members Only</span>
                                        </div>
                                    }
                                </div>

                                @{
                                    var therapistCount = serviceTherapists.ContainsKey(service.Id) 
                                        ? serviceTherapists[service.Id].Count 
                                        : 0;
                                }

                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-people"></i>
                                        @therapistCount therapist(s) assigned
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <div class="d-flex gap-2">
                                    <a href="/admin/services/edit/@service.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    @if (service.IsActive)
                                    {
                                        <button class="btn btn-sm btn-outline-warning" 
                                                @onclick="() => DeactivateService(service.Id)">
                                            <i class="bi bi-x-circle"></i> Deactivate
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-success" 
                                                @onclick="() => ActivateService(service.Id)">
                                            <i class="bi bi-check-circle"></i> Activate
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">No services found</p>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<SpaService> allServices = new();
    private List<SpaService> filteredServices = new();
    private List<Location> locations = new();
    private Dictionary<int, List<string>> serviceTherapists = new();
    private int? selectedLocationId = null;
    private string searchQuery = "";
    private bool showInactive = false;
    private bool isLoading = true;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        // Check for success message from navigation
        var uri = new Uri(NavigationManager.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (query.TryGetValue("success", out var message))
        {
            successMessage = message.ToString();
        }

        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;

        allServices = await DbContext.SpaServices
            .Include(s => s.Location)
            .OrderBy(s => s.Location.Name)
            .ThenBy(s => s.Name)
            .ToListAsync();

        locations = await DbContext.Locations
            .Where(l => l.IsActive)
            .OrderBy(l => l.Name)
            .ToListAsync();

        // Load therapist assignments
        var assignments = await DbContext.ServiceTherapists
            .Include(st => st.Therapist)
            .ToListAsync();

        serviceTherapists = assignments
            .GroupBy(st => st.ServiceId)
            .ToDictionary(
                g => g.Key,
                g => g.Select(st => $"{st.Therapist.FirstName} {st.Therapist.LastName}").ToList()
            );

        ApplyFilters();
        isLoading = false;
    }

    private void FilterByLocation(int? locationId)
    {
        selectedLocationId = locationId;
        ApplyFilters();
    }

    private void ToggleInactive(bool show)
    {
        showInactive = show;
        ApplyFilters();
    }

    private void SearchServices()
    {
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredServices = allServices;

        // Filter by location
        if (selectedLocationId.HasValue)
        {
            filteredServices = filteredServices.Where(s => s.LocationId == selectedLocationId.Value).ToList();
        }

        // Filter by active status
        if (!showInactive)
        {
            filteredServices = filteredServices.Where(s => s.IsActive).ToList();
        }

        // Filter by search query
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            filteredServices = filteredServices.Where(s =>
                s.Name.ToLower().Contains(query) ||
                s.Description.ToLower().Contains(query)
            ).ToList();
        }
    }

    private int GetLocationServiceCount(int locationId)
    {
        var count = allServices.Count(s => s.LocationId == locationId);
        return showInactive ? count : allServices.Count(s => s.LocationId == locationId && s.IsActive);
    }

    private async Task ActivateService(int serviceId)
    {
        var service = await DbContext.SpaServices.FindAsync(serviceId);
        if (service != null)
        {
            service.IsActive = true;
            service.UpdatedAt = DateTime.UtcNow;
            await DbContext.SaveChangesAsync();
            successMessage = $"Service '{service.Name}' has been activated.";
            await LoadData();
        }
    }

    private async Task DeactivateService(int serviceId)
    {
        var service = await DbContext.SpaServices.FindAsync(serviceId);
        if (service != null)
        {
            service.IsActive = false;
            service.UpdatedAt = DateTime.UtcNow;
            await DbContext.SaveChangesAsync();
            successMessage = $"Service '{service.Name}' has been deactivated.";
            await LoadData();
        }
    }
}

