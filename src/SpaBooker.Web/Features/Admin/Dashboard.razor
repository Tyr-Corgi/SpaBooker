@page "/admin/dashboard"
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin Dashboard - SpaBooker</PageTitle>

<div class="container-fluid py-4">
    <!-- Compact Header with Filters -->
    <div class="row align-items-center mb-3">
        <div class="col-12">
            <h1 class="text-rose-gold mb-1">Dashboard</h1>
        </div>
    </div>
    
    <!-- Location Selector -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex gap-2 flex-wrap">
                <button type="button" 
                        class="btn btn-sm @(selectedLocationId == 0 ? "btn-rose-gold" : "btn-outline-secondary")"
                        @onclick="() => SetLocation(0)">
                    <i class="bi bi-bar-chart-line"></i> All Locations Summary
                </button>
                @foreach (var location in locations)
                {
                    <button type="button" 
                            class="btn btn-sm @(selectedLocationId == location.Id ? "btn-rose-gold" : "btn-outline-secondary")"
                            @onclick="() => SetLocation(location.Id)">
                        <i class="bi bi-geo-alt"></i> @location.Name
                    </button>
                }
            </div>
        </div>
    </div>
    
    <!-- Time Period Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group flex-wrap" role="group">
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.Last7Days ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.Last7Days)">
                    <i class="bi bi-calendar-minus"></i> Last 7 Days
                </button>
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.Last30Days ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.Last30Days)">
                    <i class="bi bi-calendar-week"></i> Last 30 Days
                </button>
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.Today ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.Today)">
                    <i class="bi bi-calendar-day"></i> Today
                </button>
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.Next7Days ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.Next7Days)">
                    <i class="bi bi-calendar-plus"></i> Next 7 Days
                </button>
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.Next30Days ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.Next30Days)">
                    <i class="bi bi-calendar-range"></i> Next 30 Days
                </button>
                <button type="button" 
                        class="btn btn-sm @(timeFilter == TimeFilter.YTD ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => SetTimeFilter(TimeFilter.YTD)">
                    <i class="bi bi-calendar-check"></i> YTD
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading dashboard...</p>
        </div>
    }
    else
    {
        <!-- Compact Key Metrics -->
        <div class="row g-2 mb-4">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small mb-1">Bookings</div>
                                <h3 class="mb-0 text-rose-gold">@filteredStats.TotalBookings</h3>
                            </div>
                            <div class="text-primary opacity-50" style="font-size: 2rem;">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small mb-1">Revenue</div>
                                <h3 class="mb-0 text-success">$@filteredStats.TotalRevenue.ToString("N0")</h3>
                            </div>
                            <div class="text-success opacity-50" style="font-size: 2rem;">
                                <i class="bi bi-currency-dollar"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small mb-1">Confirmed</div>
                                <h3 class="mb-0">@filteredStats.ConfirmedCount</h3>
                            </div>
                            <div class="text-success opacity-50" style="font-size: 2rem;">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="text-muted small mb-1">Pending</div>
                                <h3 class="mb-0">@filteredStats.PendingCount</h3>
                            </div>
                            <div class="text-warning opacity-50" style="font-size: 2rem;">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bookings List -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi @GetTimeFilterIcon()"></i> 
                                @GetTimeFilterTitle() Bookings
                            </h5>
                        </div>
                        <span class="badge bg-secondary rounded-pill">@filteredBookings.Count</span>
                    </div>
                    <div class="card-body p-0">
                        @if (filteredBookings.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-sm align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="border-0">Client</th>
                                            <th class="border-0">Service</th>
                                            <th class="border-0">Therapist</th>
                                            <th class="border-0">Date & Time</th>
                                            <th class="border-0">Status</th>
                                            <th class="border-0 text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var booking in filteredBookings.Take(15))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="fw-semibold">@booking.Client.FirstName @booking.Client.LastName</div>
                                                </td>
                                                <td>
                                                    <div class="text-truncate" style="max-width: 200px;">@booking.Service.Name</div>
                                                </td>
                                                <td>@booking.Therapist.FirstName @booking.Therapist.LastName</td>
                                                <td>
                                                    <div class="small">@booking.StartTime.ToString("MMM dd, yyyy")</div>
                                                    <div class="text-muted" style="font-size: 0.75rem;">@booking.StartTime.ToString("h:mm tt")</div>
                                                </td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(booking.Status)">
                                                        @booking.Status
                                                    </span>
                                                </td>
                                                <td class="text-end fw-semibold">${@booking.TotalPrice.ToString("F2")}</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            @if (filteredBookings.Count > 15)
                            {
                                <div class="text-center py-2 border-top bg-light">
                                    <small class="text-muted">Showing 15 of @filteredBookings.Count bookings</small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-x text-muted opacity-25" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 mb-0">No bookings for this period</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Summary -->
        @if (selectedLocationId == 0)
        {
            <!-- Location Comparison -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-bar-chart-line"></i> Location Comparison
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (locationPerformance.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-sm align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="border-0">Location</th>
                                                <th class="border-0 text-center">Bookings</th>
                                                <th class="border-0 text-center">Confirmed</th>
                                                <th class="border-0 text-center">Pending</th>
                                                <th class="border-0 text-end">Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var location in locationPerformance)
                                            {
                                                <tr>
                                                    <td class="fw-semibold">@location.LocationName</td>
                                                    <td class="text-center">@location.BookingCount</td>
                                                    <td class="text-center">
                                                        <span class="badge bg-success rounded-pill">@location.ConfirmedCount</span>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-warning rounded-pill">@location.PendingCount</span>
                                                    </td>
                                                    <td class="text-end fw-semibold">$@location.Revenue.ToString("N0")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-building text-muted opacity-25" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-3 mb-0">No location data available</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Top Services -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-star"></i> Top Services
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (topServices.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-sm align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="border-0">Service</th>
                                                <th class="border-0 text-center">Bookings</th>
                                                <th class="border-0 text-end">Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var service in topServices)
                                            {
                                                <tr>
                                                    <td class="fw-semibold">@service.ServiceName</td>
                                                    <td class="text-center">@service.BookingCount</td>
                                                    <td class="text-end fw-semibold">$@service.Revenue.ToString("N0")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-box text-muted opacity-25" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-3 mb-0">No service data available</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<Location> locations = new();
    private List<Booking> allBookings = new();
    private List<Booking> filteredBookings = new();
    private FilteredStats filteredStats = new();
    private List<TopService> topServices = new();
    private List<LocationPerformance> locationPerformance = new();
    
    private int selectedLocationId = 0;
    private TimeFilter timeFilter = TimeFilter.Today;
    private bool isLoading = true;

    private enum TimeFilter { Last7Days, Last30Days, Today, Next7Days, Next30Days, YTD }

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
        
        // Default to first location if available
        if (locations.Any())
        {
            selectedLocationId = locations.First().Id;
            ApplyFilters();
        }
    }

    private async Task LoadDashboardData()
    {
        isLoading = true;

        // Load locations
        locations = await DbContext.Locations
            .Where(l => l.IsActive)
            .OrderBy(l => l.Name)
            .ToListAsync();

        // Load all bookings with related data
        allBookings = await DbContext.Bookings
            .Include(b => b.Service)
            .Include(b => b.Client)
            .Include(b => b.Therapist)
            .Include(b => b.Location)
            .OrderBy(b => b.StartTime)
            .ToListAsync();

        isLoading = false;
    }

    private async Task SetLocation(int locationId)
    {
        selectedLocationId = locationId;
        ApplyFilters();
        await InvokeAsync(StateHasChanged);
    }

    private async Task SetTimeFilter(TimeFilter filter)
    {
        timeFilter = filter;
        ApplyFilters();
        await InvokeAsync(StateHasChanged);
    }

    private void ApplyFilters()
    {
        var now = DateTime.UtcNow;
        var today = DateTime.Today.ToUniversalTime();
        var tomorrow = today.AddDays(1);
        var last7Days = today.AddDays(-7);
        var last30Days = today.AddDays(-30);
        var next7Days = today.AddDays(7);
        var next30Days = today.AddDays(30);
        var yearStart = new DateTime(today.Year, 1, 1, 0, 0, 0, DateTimeKind.Utc);

        // Filter by location
        var locationFiltered = selectedLocationId == 0 
            ? allBookings 
            : allBookings.Where(b => b.LocationId == selectedLocationId);

        // Filter by time period
        filteredBookings = timeFilter switch
        {
            TimeFilter.Last7Days => locationFiltered.Where(b => b.StartTime >= last7Days && b.StartTime < today).OrderByDescending(b => b.StartTime).ToList(),
            TimeFilter.Last30Days => locationFiltered.Where(b => b.StartTime >= last30Days && b.StartTime < today).OrderByDescending(b => b.StartTime).ToList(),
            TimeFilter.Today => locationFiltered.Where(b => b.StartTime >= today && b.StartTime < tomorrow).OrderBy(b => b.StartTime).ToList(),
            TimeFilter.Next7Days => locationFiltered.Where(b => b.StartTime >= today && b.StartTime < next7Days).OrderBy(b => b.StartTime).ToList(),
            TimeFilter.Next30Days => locationFiltered.Where(b => b.StartTime >= today && b.StartTime < next30Days).OrderBy(b => b.StartTime).ToList(),
            TimeFilter.YTD => locationFiltered.Where(b => b.StartTime >= yearStart && b.StartTime <= now).OrderBy(b => b.StartTime).ToList(),
            _ => locationFiltered.ToList()
        };

        // Calculate filtered stats
        filteredStats = new FilteredStats
        {
            TotalBookings = filteredBookings.Count,
            TotalRevenue = filteredBookings.Where(b => b.Status != BookingStatus.Cancelled).Sum(b => b.TotalPrice),
            ConfirmedCount = filteredBookings.Count(b => b.Status == BookingStatus.Confirmed),
            PendingCount = filteredBookings.Count(b => b.Status == BookingStatus.Pending)
        };

        // Calculate top services for filtered data
        topServices = filteredBookings
            .Where(b => b.Status != BookingStatus.Cancelled)
            .GroupBy(b => new { b.ServiceId, b.Service.Name })
            .Select(g => new TopService
            {
                ServiceName = g.Key.Name,
                BookingCount = g.Count(),
                Revenue = g.Sum(b => b.TotalPrice)
            })
            .OrderByDescending(s => s.BookingCount)
            .Take(10)
            .ToList();

        // Calculate location performance (only when All Locations is selected)
        if (selectedLocationId == 0)
        {
            locationPerformance = filteredBookings
                .Where(b => b.Status != BookingStatus.Cancelled)
                .GroupBy(b => new { b.LocationId, b.Location.Name })
                .Select(g => new LocationPerformance
                {
                    LocationName = g.Key.Name,
                    BookingCount = g.Count(),
                    ConfirmedCount = g.Count(b => b.Status == BookingStatus.Confirmed),
                    PendingCount = g.Count(b => b.Status == BookingStatus.Pending),
                    Revenue = g.Sum(b => b.TotalPrice)
                })
                .OrderByDescending(l => l.Revenue)
                .ToList();
        }
        else
        {
            // Clear location performance when viewing a specific location
            locationPerformance = new List<LocationPerformance>();
        }
    }

    private string GetTimePeriodLabel()
    {
        return timeFilter switch
        {
            TimeFilter.Last7Days => "last 7 days",
            TimeFilter.Last30Days => "last 30 days",
            TimeFilter.Today => "today",
            TimeFilter.Next7Days => "next 7 days",
            TimeFilter.Next30Days => "next 30 days",
            TimeFilter.YTD => "year to date",
            _ => ""
        };
    }

    private string GetTimeFilterTitle()
    {
        return timeFilter switch
        {
            TimeFilter.Last7Days => "Last 7 Days",
            TimeFilter.Last30Days => "Last 30 Days",
            TimeFilter.Today => "Today's",
            TimeFilter.Next7Days => "Next 7 Days",
            TimeFilter.Next30Days => "Next 30 Days",
            TimeFilter.YTD => "Year to Date",
            _ => ""
        };
    }

    private string GetTimeFilterIcon()
    {
        return timeFilter switch
        {
            TimeFilter.Last7Days => "bi-calendar-minus",
            TimeFilter.Last30Days => "bi-calendar-week",
            TimeFilter.Today => "bi-calendar-day",
            TimeFilter.Next7Days => "bi-calendar-plus",
            TimeFilter.Next30Days => "bi-calendar-range",
            TimeFilter.YTD => "bi-calendar-check",
            _ => "bi-calendar"
        };
    }

    private string GetStatusBadgeClass(BookingStatus status)
    {
        return status switch
        {
            BookingStatus.Pending => "badge-warning",
            BookingStatus.Confirmed => "badge-success",
            BookingStatus.Completed => "badge-secondary",
            BookingStatus.Cancelled => "badge-danger",
            BookingStatus.NoShow => "badge-danger",
            _ => "badge-secondary"
        };
    }

    public class FilteredStats
    {
        public int TotalBookings { get; set; }
        public decimal TotalRevenue { get; set; }
        public int ConfirmedCount { get; set; }
        public int PendingCount { get; set; }
    }

    public class TopService
    {
        public string ServiceName { get; set; } = string.Empty;
        public int BookingCount { get; set; }
        public decimal Revenue { get; set; }
    }

    public class LocationPerformance
    {
        public string LocationName { get; set; } = string.Empty;
        public int BookingCount { get; set; }
        public int ConfirmedCount { get; set; }
        public int PendingCount { get; set; }
        public decimal Revenue { get; set; }
    }
}

