@page "/admin/test-build-cache"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Build Cache Test</PageTitle>

<div class="container py-4">
    <div class="alert alert-success">
        <h1>âœ… Build System Working!</h1>
        <p>If you can see this message, the Razor compiler is working correctly.</p>
        <p>Test timestamp: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
        <button type="button" class="btn btn-primary" @onclick="TestClick">Test Button</button>
        @if (clicked)
        {
            <p class="mt-3">Button clicked at: @clickTime</p>
        }
    </div>
</div>

@code {
    private bool clicked = false;
    private string clickTime = "";

    private void TestClick()
    {
        clicked = true;
        clickTime = DateTime.Now.ToString("HH:mm:ss");
    }
}

