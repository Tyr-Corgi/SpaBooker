@page "/inventory"
@using Microsoft.EntityFrameworkCore
@using SpaBooker.Core.Entities
@using SpaBooker.Infrastructure.Data
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Therapist,Admin")]

<PageTitle>Inventory - SpaBooker</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="text-rose-gold mb-2">Inventory Management</h1>
                    <p class="text-muted">Track spa supplies and products</p>
                </div>
                <AuthorizeView Roles="Admin">
                    <button class="btn btn-primary" @onclick="ShowAddItemModal">
                        <i class="bi bi-plus-circle"></i> Add Item
                    </button>
                </AuthorizeView>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner"></div>
            <p class="mt-3 text-muted">Loading inventory...</p>
        </div>
    }
    else
    {
        <!-- Location Filter -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <label class="form-label fw-bold">Filter by Location</label>
                        <select class="form-select" @onchange="OnLocationChanged">
                            @if (userLocation != null)
                            {
                                <option value="@userLocation.Id" selected>@userLocation.Name (My Location)</option>
                            }
                            else
                            {
                                <option value="">All Locations</option>
                                @foreach (var location in locations)
                                {
                                    <option value="@location.Id">@location.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Alert -->
        @if (lowStockItems.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Low Stock Alert:</strong> @lowStockItems.Count item(s) below minimum stock level.
            </div>
        }

        <!-- Inventory Grid -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>SKU</th>
                                        <th>Location</th>
                                        <th class="text-center">Current Stock</th>
                                        <th class="text-center">Min Stock</th>
                                        <th>Unit</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in filteredItems)
                                    {
                                        <tr class="@(item.CurrentStock <= item.MinimumStock ? "table-warning" : "")">
                                            <td>
                                                <strong>@item.Name</strong>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <br />
                                                    <small class="text-muted">@item.Description</small>
                                                }
                                            </td>
                                            <td>@item.SKU</td>
                                            <td>@GetLocationName(item.LocationId)</td>
                                            <td class="text-center">
                                                <span class="badge @(item.CurrentStock <= item.MinimumStock ? "badge-danger" : "badge-success")">
                                                    @item.CurrentStock
                                                </span>
                                            </td>
                                            <td class="text-center">@item.MinimumStock</td>
                                            <td>@item.Unit</td>
                                            <td>
                                                <span class="badge @(item.IsActive ? "badge-success" : "badge-secondary")">
                                                    @(item.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" @onclick="() => ShowAdjustStockModal(item)">
                                                        <i class="bi bi-arrow-left-right"></i>
                                                    </button>
                                                    <button class="btn btn-outline-info" @onclick="() => ViewHistory(item.Id)">
                                                        <i class="bi bi-clock-history"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (!filteredItems.Any())
                        {
                            <div class="text-center py-4">
                                <p class="text-muted mb-0">No inventory items found</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-rose-gold">@filteredItems.Count</h3>
                        <p class="text-muted mb-0">Total Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@lowStockItems.Count</h3>
                        <p class="text-muted mb-0">Low Stock</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@filteredItems.Count(i => i.IsActive)</h3>
                        <p class="text-muted mb-0">Active</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-secondary">@filteredItems.Count(i => !i.IsActive)</h3>
                        <p class="text-muted mb-0">Inactive</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Adjust Stock Modal -->
@if (showAdjustModal && selectedItem != null)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adjust Stock - @selectedItem.Name</h5>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@adjustModel" OnValidSubmit="AdjustStock" FormName="adjustStock">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label">Current Stock: <strong>@selectedItem.CurrentStock</strong></label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Transaction Type</label>
                            <InputSelect class="form-select" @bind-Value="adjustModel.TransactionType">
                                <option value="Add">Add Stock (Received)</option>
                                <option value="Remove">Remove Stock (Used)</option>
                                <option value="Adjustment">Adjustment (Count Correction)</option>
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quantity</label>
                            <InputNumber class="form-control" @bind-Value="adjustModel.Quantity" />
                            <ValidationMessage For="@(() => adjustModel.Quantity)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <InputTextArea class="form-control" @bind-Value="adjustModel.Notes" rows="3" />
                        </div>

                        @if (!string.IsNullOrEmpty(adjustError))
                        {
                            <div class="alert alert-danger">@adjustError</div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Save
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModals">
                                Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<InventoryItem> allItems = new();
    private List<InventoryItem> filteredItems = new();
    private List<InventoryItem> lowStockItems = new();
    private List<Location> locations = new();
    private Location? userLocation;
    private bool isLoading = true;
    private string? currentUserId;
    private int? selectedLocationId;

    private bool showAdjustModal = false;
    private InventoryItem? selectedItem;
    private AdjustStockModel adjustModel = new();
    private bool isSaving = false;
    private string? adjustError;

    protected override async Task OnInitializedAsync()
    {
        await GetCurrentUser();
        await LoadInventory();
    }

    private async Task GetCurrentUser()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            var appUser = await UserManager.GetUserAsync(user);
            currentUserId = appUser?.Id;
            
            if (appUser?.LocationId.HasValue == true)
            {
                userLocation = await DbContext.Locations.FindAsync(appUser.LocationId.Value);
                selectedLocationId = appUser.LocationId.Value;
            }
        }
    }

    private async Task LoadInventory()
    {
        isLoading = true;

        locations = await DbContext.Locations
            .Where(l => l.IsActive)
            .OrderBy(l => l.Name)
            .ToListAsync();

        allItems = await DbContext.InventoryItems
            .Include(i => i.Location)
            .OrderBy(i => i.Name)
            .ToListAsync();

        ApplyFilters();
        isLoading = false;
    }

    private void ApplyFilters()
    {
        filteredItems = selectedLocationId.HasValue
            ? allItems.Where(i => i.LocationId == selectedLocationId.Value).ToList()
            : allItems;

        lowStockItems = filteredItems
            .Where(i => i.CurrentStock <= i.MinimumStock && i.IsActive)
            .ToList();
    }

    private Task OnLocationChanged(ChangeEventArgs e)
    {
        var locationIdString = e.Value?.ToString();
        
        if (string.IsNullOrEmpty(locationIdString))
        {
            selectedLocationId = null;
        }
        else if (int.TryParse(locationIdString, out var locationId))
        {
            selectedLocationId = locationId;
        }

        ApplyFilters();
        return Task.CompletedTask;
    }

    private string GetLocationName(int locationId)
    {
        return locations.FirstOrDefault(l => l.Id == locationId)?.Name ?? "Unknown";
    }

    private void ShowAdjustStockModal(InventoryItem item)
    {
        selectedItem = item;
        adjustModel = new AdjustStockModel();
        adjustError = null;
        showAdjustModal = true;
    }

    private void ShowAddItemModal()
    {
        // Implement add item functionality
        NavigationManager.NavigateTo("/inventory/add");
    }

    private void ViewHistory(int itemId)
    {
        NavigationManager.NavigateTo($"/inventory/history/{itemId}");
    }

    private void CloseModals()
    {
        showAdjustModal = false;
        selectedItem = null;
        adjustModel = new AdjustStockModel();
    }

    private async Task AdjustStock()
    {
        if (selectedItem == null || string.IsNullOrEmpty(currentUserId)) return;

        isSaving = true;
        adjustError = null;

        try
        {
            int quantityChange = adjustModel.TransactionType == "Remove" ? -adjustModel.Quantity : adjustModel.Quantity;
            
            if (selectedItem.CurrentStock + quantityChange < 0)
            {
                adjustError = "Cannot reduce stock below zero.";
                isSaving = false;
                return;
            }

            selectedItem.CurrentStock += quantityChange;
            selectedItem.UpdatedAt = DateTime.UtcNow;

            var transaction = new InventoryTransaction
            {
                InventoryItemId = selectedItem.Id,
                Quantity = adjustModel.Quantity,
                Type = adjustModel.TransactionType,
                Notes = adjustModel.Notes,
                PerformedBy = currentUserId,
                CreatedAt = DateTime.UtcNow
            };

            DbContext.InventoryTransactions.Add(transaction);
            await DbContext.SaveChangesAsync();

            await LoadInventory();
            CloseModals();
        }
        catch (Exception)
        {
            adjustError = "An error occurred while adjusting stock.";
        }
        finally
        {
            isSaving = false;
        }
    }

    public class AdjustStockModel
    {
        [Required]
        public string TransactionType { get; set; } = "Add";

        [Required]
        [Range(1, 10000, ErrorMessage = "Quantity must be between 1 and 10000")]
        public int Quantity { get; set; } = 1;

        public string? Notes { get; set; }
    }
}

