            ViewMode.Week => $"{start:dd/MM} - {end.AddDays(-1):dd/MM/yyyy}",
            ViewMode.Fortnight => $"{start:dd/MM} - {end.AddDays(-1):dd/MM/yyyy}",
            ViewMode.Month => currentDate.ToString("MMMM yyyy"),
            _ => currentDate.ToString("dd/MM/yyyy")
